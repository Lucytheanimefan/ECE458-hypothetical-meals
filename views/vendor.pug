extends layout

block content
  h1= 'Create Vendor'
  form(action='/vendors/create_vendor', method='post')
    input(type='text', name='name', placeholder = 'Vendor name', required='')
    input(type='text', name='contact', placeholder = 'Contact Info', required='')
    input(type='text', name='location', placeholder = 'Location', required='')
    input(type='submit', value='add vendor')

  h1= 'Search for Vendor'
  form(action='/vendors/search', method='get')
    input(type='text', name='name', placeholder = 'Name', required='')
    input(type='text', name='ingredient', placeholder = 'Ingredient', required='')
    input(type='text', name='location', placeholder = 'Location', required='')
    input(type='text', name='code', placeholder = 'Vendor Code', required='')
    input(type='submit', value='search')
