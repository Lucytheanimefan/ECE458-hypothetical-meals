extends layout

block link
  -var selected = 'Vendors';

block content
  #ing-table
    table.table
      thead.text-primary
        th Vendor
        th Code
        th Contact
        th Location
      tbody
      each vendor in vendors
        tr
          th
            a(href='/vendors/' + vendor.code)= vendor.name
          th= vendor.code
          th= vendor.contact
          th= vendor.location.state

  h1= 'Create Vendor'
  form(action='/vendors/new', method='post')
    input(type='text', name='name', placeholder = 'Vendor name', required='')
    input(type='text', name='contact', placeholder = 'Contact Info', required='')
    input(type='text', name='city', placeholder = 'city', required='')
    input(type='text', name='state', placeholder = 'state', required='')
    input(type='submit', value='add vendor')

  h1= 'Search for Vendor'
  form(action='/vendors/search', method='get')
    input(type='text', name='name', placeholder = 'Name')
    input(type='text', name='ingredient', placeholder = 'Ingredient')
    input(type='text', name='location', placeholder = 'Location')
    input(type='text', name='code', placeholder = 'Vendor Code')
    input(type='submit', value='search')
