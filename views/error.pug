extends layout

block css
  link(href='/stylesheets/error.css', rel='stylesheet')

block content
  .floatleft
    img(src="/img/broken-plate.png")
  .floatright
    .error-text
      - var text = message;
      h1= "Something went wrong!"
      p!= text.replace(/</g, "&lt;").replace(/>/g, '&gt;').replace(/\n/g, '<br />')
