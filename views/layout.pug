html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/img/apple-icon.png')
    link(rel='icon', type='image/png', href='/img/hypotheticalmeals.png?v=2')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
