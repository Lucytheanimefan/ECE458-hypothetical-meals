doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/img/apple-icon.png')
    link(rel='icon', type='image/png', href='/img/hypotheticalmeals.png?v=2')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Hypothetical Meals
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')
    // Bootstrap core CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    // Material Dashboard CSS
    link(href='/css/material-dashboard.css?v=1.2.0', rel='stylesheet')
    // Jquery UI
    link(href='/css/jquery-ui.min.css', rel='stylesheet')
    // CSS for Demo Purpose, don't include it in your project
    //link(href='/css/demo.css', rel='stylesheet')
    // Custom css
    link(href='/stylesheets/style.css', rel='stylesheet')
    block css
    // Fonts and icons
    link(href='/stylesheets/font-awesome.min.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons', rel='stylesheet', type='text/css')
  block link
    -var selected = 'home'; // default
  block status
    -var user_status = 'Logout';
  body
    .wrapper
      .sidebar(data-color='purple', data-image='/img/sidebar-4.jpg')
        //
          Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"
          Tip 2: you can also add an image using data-image tag
        .logo
          a.simple-text(href='/')
            | Hypothetical Meals

        -var menu = { 'Home': '/', 'Profile': '/users/profile','Users':'/users/admin', 'Ingredients': '/ingredients', 'Vendors':'/vendors', 'Cart':'/users/cart', 'Uploads': '/files','Inventory':'/inventory', 'Report':'/users/report', 'Logs': '/logs'};

        -var icons = {'Home':'home', 'Profile': 'account_circle','Users': 'supervisor_account','Uploads': 'publish','Ingredients':'local_pizza','Vendors':'restaurant','Cart':'local_grocery_store','Inventory':'local_shipping', 'Report':'content_paste', 'Logs': 'library_books'}


        .sidebar-wrapper
          ul.nav
            each val, key in menu
              -var icon = icons[key]
              if selected === key
                li.active.meal-category.hide
                  a(href=val)
                    i.material-icons #{icon}
                    p #{key}
              else
                li.meal-category.hide
                  a(href=val)
                    i.material-icons #{icon}
                    p #{key}

      .main-panel
        nav.navbar.navbar-transparent.navbar-absolute
          .container-fluid
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right

                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.material-icons person
                    //- p.hidden-lg.hidden-md Notifications
                  ul.dropdown-menu
                    li
                      a#profile(href='/users/profile') Profile
                    li
                      a#logout(href='/users/logout') Logout

              //- form.navbar-form.navbar-right
              //-   //- .form-group.is-empty
              //-   a#profile(href='/users/profile') Profile
              //-   a#logout(href='/users/logout') Logout
        .content
          .container-fluid
            block content



  // Core JS Files
  script(src='/js/jquery-3.2.1.min.js', type='text/javascript')
  script(src='/js/jquery-ui.min.js', type='text/javascript')
  script(src='/js/jquery-paginate.min.js', type='text/javascript')
  script(src='/js/bootstrap.min.js', type='text/javascript')
  script(src='/js/material.min.js', type='text/javascript')
  // Charts Plugin
  script(src='/js/chartist.min.js')
  // Dynamic Elements plugin
  script(src='/js/arrive.min.js')
  // PerfectScrollbar Library
  script(src='/js/perfect-scrollbar.jquery.min.js')
  // Notifications Plugin
  script(src='/js/bootstrap-notify.js')
  // Material Dashboard javascript methods
  script(src='/js/material-dashboard.js?v=1.2.0')
  // Custom js
  script(src='/js/script.js')
  script.
    loadLoggedInContent();
    $('tbody').sortable();
    loadRelevantContent();
    $('table').paginate({ limit: 10, // 10 elements per page
      initialPage: 0, // Start on second page
      //previous: false, // Show previous button
      previousText: 'Prev  ', // Change previous button text
      next: true, // Show previous button
      nextText: '  Next', // Change next button text

    });
  block scripts

    
