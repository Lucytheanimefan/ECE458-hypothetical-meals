    link(href='/css/c3.min.css', rel='stylesheet')
  block link
    -var selected = 'home'; // default
  block status
    -var user_status = 'Logout';
  body(style='padding: 0px !important;')
    .wrapper
      .sidebar(data-color='purple', data-image='/img/sidebar-4.jpg')
        //
          Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"
          Tip 2: you can also add an image using data-image tag
        .logo
          a.simple-text(href='/')
            | Hypothetical Meals

        -var menu = { 'Home': '/', 'Users':'/users/admin', 'Ingredients': '/ingredients', 'Vendors':'/vendors', 'Cart':'/users/cart', 'Uploads': '/files','Inventory':'/inventory', 'Formulas': '/formulas', 'Orders':'/orders', 'Lots':'/users/lot_assignment', 'Production Lines': '/production_lines', 'Distributor Network': '/distributor', 'Report':'/reports', 'Logs': '/logs', 'Backups':'/backups'};

        -var icons = {'Home':'home', 'Profile': 'account_circle','Users': 'supervisor_account','Uploads': 'publish','Ingredients':'local_pizza','Vendors':'restaurant','Cart':'local_grocery_store','Inventory':'local_shipping', 'Formulas':'book', 'Orders':'markunread_mailbox','Report':'content_paste', 'Lots':'assignment', 'Logs': 'library_books', 'Backups':'backup', 'Production Lines': 'call_missed_outgoing', 'Distributor Network': 'send'}


        .sidebar-wrapper
          ul.nav
            each val, key in menu
              -var icon = icons[key]
              if selected === key
                li.active.meal-category.hide
                  a(href=val)
                    i.material-icons #{icon}
                    p #{key}
              else
                li.meal-category.hide
                  a(href=val)
                    i.material-icons #{icon}
                    p #{key}

      div(style='padding: 50px !important;').main-panel
        nav.navbar.navbar-transparent
          .container-fluid
            div Logged in as
              span#username
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            .collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.material-icons person
                    //- p.hidden-lg.hidden-md Notifications
                  ul.dropdown-menu
                    li
                      a#profile(href='/users/profile') Profile
                    li
                      a#logout(href='/users/logout') Logout

              //- form.navbar-form.navbar-right
              //-   //- .form-group.is-empty
              //-   a#profile(href='/users/profile') Profile
              //-   a#logout(href='/users/logout') Logout
        .content(style='margin-top: 0px;')
          .container-fluid
            block content



