extends layout
block link
	-var selected = 'Users';

block content
	//- button.btn-primary.btn.accordion
	h6 Create a user
	//- .login-form.panel
	form(action='/users', method='post')
		.form-group
			label.control-label Email
			input.form-control(type='text', name='email', placeholder='Email', required='')
		.form-group
			label.control-label Username
			input.form-control(type='text', name='username', placeholder='Username', required='')
		.form-group
			label.control-label Password
			input.form-control(type='password', name='password', placeholder='Password', required='')
		.form-group
			label.control-label Password Confirmation
			input.form-control(type='password', name='passwordConf', placeholder='Confirm Password', required='')
		.form-group
			label.control-label Role
			input.form-control(type='text', name='role', placeholder='role', required='', value='User')
		button.btn.btn-primary.pull-right(type='submit', value='Create') Create

	form(action='/users/resentToken', method='post')
		.form-group
			label.control-label Email
			input.form-control(type='text', name='email', placeholder='Email', required='')
		button.btn.btn-primary.pull-right(type='submit', value='Create') Resend Token
